#include <avr/io.h>
#define F_CPU 8000000UL
#include <util/delay.h>

int main(void)
{
	DDRD = 0b11111111; // Set PORTD as output

	while (1)
	{
		for (int i = 0; i < 6; i++)
		{
			PORTD = (1 << i); // One LED ON at a time
			_delay_ms(100);
		}

		PORTD = 0x00; // Turn off all LEDs
		_delay_ms(100);
	}
}
