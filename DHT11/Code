#include <DHT.h>

#define DHTPIN 2     
#define DHTTYPE DHT11   
DHT dht(DHTPIN, DHTTYPE);

int led=13;
int chk;
float hum; 
float temp; 

void setup()
{
    Serial.begin(9600);
	dht.begin();    
}

void loop()
{
    hum = dht.readHumidity();
    temp= dht.readTemperature();
    Serial.print("Humidity: ");
    Serial.print(hum);
    Serial.print(" %, Temp: ");
    Serial.print(temp);
    Serial.println(" Celsius");
    if (temp>2)
    {
      Serial.print("");
      Serial.print(" HOT CLIMATE");
    }
    
    delay(2000);
}
